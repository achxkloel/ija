<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ija.project.uml.SceneWelcomeController">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#openExistingDiagram" text="Load Class Diagram" />
            <MenuItem mnemonicParsing="false" onAction="#openExistingDiagram" text="Load Sequence Diagram" />
            <MenuItem mnemonicParsing="false" onAction="#quitApplication" text="Quit" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" />
        </Menu>
    </MenuBar>
      <VBox alignment="CENTER" prefHeight="582.0" prefWidth="900.0" stylesheets="@../styles/styles.css" VBox.vgrow="ALWAYS">
            <Label alignment="CENTER" prefWidth="900.0" text="Welcome" textFill="#eee5e5">
               <font>
                  <Font name="SansSerif Regular" size="64.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
              <Button mnemonicParsing="false" onAction="#openExistingDiagram" text="Load Class Diagram">
                <font>
                  <Font size="15.0" />
                </font>
                <HBox.margin>
                   <Insets left="10.0" right="10.0" />
                </HBox.margin>
              </Button>
              <Button mnemonicParsing="false" onAction="#openNewDiagram" text="Create new diagram">
                <font>
                  <Font size="15.0" />
                </font>
                <HBox.margin>
                   <Insets left="10.0" right="10.0" />
                </HBox.margin>
              </Button>
            </HBox>
      </VBox>
</VBox>
